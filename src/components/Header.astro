---
import Nav from './Nav.astro'

const path = Astro.request.url.pathname;
const isIndexPage = path === '/';
---

<header class="layout">
  <article>
    <h1>
      <a href="/">
        {isIndexPage ? <span>home</span> : <span>ryan harris</span>}
      </a>
    </h1>
    <Nav />
  </article>
</header>

<style>
header {
  padding-top: 1rem;
  padding-bottom: 1rem;
  height: 5rem;
}

article {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

h1 {
  margin: 0;
  font-size: 2.25rem;
  max-width: 100%;
  display: flex;
  flex-grow: 1;
}

h1 a {
  text-decoration: none;
  display: inline-flex;
}
</style>

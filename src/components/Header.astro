---
import Nav from './Nav.astro'
import ModeToggle from './ModeToggle.jsx'

---

<header class="layout">
  <article class="header-wrapper">
    <Nav />
    <ModeToggle client:only="react" />
  </article>
</header>

<style>
header {
  padding-top: 1rem;
  height: 5rem;
}

article {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
}

h1 {
  margin: 0;
  font-size: 2.25rem;
  max-width: 100%;
}

h1 a {
  text-decoration: none;
  display: inline-flex;
}

@media (min-width: 50em) {
  article {
    flex-direction: row;
  }
}
</style>

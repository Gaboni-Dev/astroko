---
const navItems = [
  {
    name: 'posts',
    path: '/posts'
  },
  {
    name: 'uses',
    path: '/uses'
  },
  {
    name: 'talks',
    path: '/talks'
  }
]

---

<nav>
  <ul class="nav-list">
    {navItems.map(item => {
      return (
        <li class="nav-list-item">
          <a href={item.path}>
              {item.name}
          </a>
        </li>
      )
    })}
  </ul>
</nav>

<style>
  .nav-list {
    display: flex;
  }

  .nav-list-item {
    padding: 0.5rem 1rem 1rem 0;
    z-index: 1;
  }

  @media (min-width: 50em) {
    .nav-list-item {
      margin-left: 0.5rem;
      padding: 1rem 0 1rem 1rem;
    }
  }
</style>
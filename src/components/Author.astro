---
import SocialList from './SocialList.astro';
let authordesc = 'Web Developer <em>/</em> Technical SEO ';
let hi = 'hi <em>.</em> i&#39m jeff ';
let forhire = 'Working remotely üèòÔ∏è ';
let subdesc = 'I am a web developer and technical SEO from the Philippines.<br/> Creating useful things for the web &#9996;';
let pic = '/assets/profile.jpg';
let picalt = 'Jeffrey Gaboni';

---
<style>
@import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@900&display=swap');
  .author {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 4rem;
  }

  .author-bio {
    width: 100%;
  }

  .author-name {
    margin: 0;
    text-align: center;
    font-family: Montserrat,sans-serif;
    font-weight: 900;
  }

  .author-desc {
    margin-bottom: 0.75rem;
    text-align: center;
    font-family: Montserrat,sans-serif;
    font-size: 20px;
  }
  

  .hire {
    margin-bottom: 0.75rem;
    text-align: center;
    font-size: 16px;
  }


  .author-picture {
    width: 175px;
    order: -1;
    margin-bottom: 2rem;
    margin-top: 1rem;
  }

  .profile-pic {
    min-width: 175px;
    min-height: 175px;
    border: 4px solid var(--color-gray-400);
    border-radius: 50%;
  }
  
  
  @media (min-width: 50em) {
    .author {
      flex-direction: row;
      align-items: flex-start;
    }

    .author-bio {
      width: 75%;
    }

    .author-name,
    .author-desc {
      text-align: left;
    }

    .author-picture {
      margin-left: 36px;
      order: 1;
      
    }

   .hire {
    margin-bottom: 0.75rem;
    text-align: left;
    font-size: 16px;
  }
    
  }
</style>

<div class="author">
  <div class="author-bio">
    <h1 class="author-name">{hi}</h1>  
    <p class="author-desc"> {authordesc}</p>
    <p class="hire">{subdesc}</p>
    <p class="hire">{forhire}</p>
    <SocialList size="lg" />
  </div>
  <div class="author-picture">
    <img src="{pic}" class="profile-pic"  alt="{picalt}"/>
  </div>
</div>


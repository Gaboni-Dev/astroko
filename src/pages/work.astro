---
 
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import BlogFooter from '../components/BlogFooter.astro';
import ProjectPreview from '../components/ProjectPreview.jsx';

let title = 'Projects &#9996;';
let description = 'Web Developer | SEO Specialist | Content Writer';
let permalink = 'https://www.jeffgaboni.com';
// let webdevplusurl = "https://www.webdevpl.us";
let hire = 'Available for hire &#9889;';
// let webdevplus = 'Webdev+';
// let currentlyworkingat = 'Currently working @ ';

 
let allProjects = Astro.fetchContent('./projects/*.md');
const featuredProjects = allProjects.filter(projects => {
  return projects.featured;
})
 

---
<html lang="en">
  <head>
    <BaseHead title={title} description={description} permalink={permalink} />
    <link rel="stylesheet" href="/blog.css" />

    <style>
    @import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@900&display=swap');
      body {
        width: 100%;
        display: grid;
        grid-template-rows: 3.5rem 1fr;
        --gutter: 0.5rem;
        --doc-padding: 2rem;
      }

      header {
        width: 100%;
        height: 100%;
        background-color: var(--theme-bg-offset);
        display: flex;
        align-items: center;
        justify-content: center;
      }

      .content {
        margin-top: 2rem;
      }
     

    
  
      .content :global(main > * + *) {
        margin-top: 1rem;
      }

      .tile {
        margin-bottom: 2rem;
      }

      .tile:last-of-type {
        margin-bottom: 0;
      }

      .tile-header-wrapper {
        display: flex;
        align-items: baseline;
        justify-content: space-between;
        margin-bottom: 2rem;
      }

      .tile-header {
    margin-bottom: 0.75rem;
    text-align: center;
    font-family: Montserrat,sans-serif;
    font-size: 20px;
  }



      @media (min-width: 50em) {
        .content {
          margin-top: 4rem;
        }
      }

  .projects {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 4rem;
  }

  .projects-container {
    width: 100%;
  }

  .projects-name {
    margin: 0;
    font-family: Montserrat,sans-serif;
    font-weight: 700;
    margin-bottom: 5px;
  }

  .projects-desc { 
    font-family: Montserrat,sans-serif;
    font-size: 20px;
    margin-bottom: 5px;
  }
  

  .hire {
    
    font-family: Montserrat,sans-serif;
    font-size: 24px;
  }
  .forhire {
    
    font-size: 16px;
    margin-bottom: 20px;
    
  }

 


  .projects-picture {
    width: 175px;
    order: -1;
    margin-bottom: 2rem;
    margin-top: 1rem;
  }

  .profile-pic {
    min-width: 175px;
    min-height: 175px;
    border: 4px solid var(--color-gray-400);
    border-radius: 50%;
  }
  
  
  

  @media (min-width: 50em) {
    .projects {
      flex-direction: row;
      align-items: flex-start;
    }

    .projects-container {
      width: 75%;
    }

    .projects-name,
    .projects-desc {
      
      margin-bottom: 15px;
    }

    .projects-picture {
      margin-left: 36px;
      order: 1;
      
    }
 
   
    
  }

 </style>
  </head>

  <body>
    <Header />
    
    
    <div class="layout">
      <article class="content">
        <section class="tile">
        <div class="projects">
  <div class="projects-container">
   
    
    <!-- <p class="hire">  {currentlyworkingat}  <a href="{webdevplusurl}"> {webdevplus}</a> </p> -->
   
  
     <h1 class="projects-name">{title} <em>.</em></h1>  
      <p class="forhire">{hire}  </p>
  </div>
 
</div>
        </section>
         <section class="tile">
          <div class="tile-header-wrapper">
           
             
          </div>
          {featuredProjects.map(p => <ProjectPreview projects={p} />)}
          <div class="tile-header-wrapper">
        
          
          </div>
        </section>
      </article>
    </div>
    
    <BlogFooter />
  </body>
</html>

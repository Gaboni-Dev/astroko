---
import Author from '../components/Author.astro'
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import BlogFooter from '../components/BlogFooter.astro';
import Work from '../components/Work.astro';
import ProjectPreview from '../components/ProjectPreview.jsx';

let title = 'Jeff Gaboni - Web Developer | SEO Specialist | Content Writer';
let description = 'Web Developer | SEO Specialist | Content Writer';
let permalink = 'https://www.jeffgaboni.com';
 

 
let allProjects = Astro.fetchContent('./projects/*.md');
const featuredProjects = allProjects.filter(projects => {
  return projects.featured;
})
 

---
<html lang="en">
  <head>
    <BaseHead title={title} description={description} permalink={permalink} />
    <link rel="stylesheet" href="/blog.css" />

    <style>
    @import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@900&display=swap');
      body {
        width: 100%;
        display: grid;
        grid-template-rows: 3.5rem 1fr;
        --gutter: 0.5rem;
        --doc-padding: 2rem;
      }

      header {
        width: 100%;
        height: 100%;
        background-color: var(--theme-bg-offset);
        display: flex;
        align-items: center;
        justify-content: center;
      }

      .content {
        margin-top: 2rem;
      }
     

     em {
      color: blueviolet;
      font-size: x-small;
      margin-left: 10px;
     }
    

     
      

      .content :global(main > * + *) {
        margin-top: 1rem;
      }

      .tile {
        margin-bottom: 2rem;
      }

      .tile:last-of-type {
        margin-bottom: 0;
      }

      .tile-header-wrapper {
        display: flex;
        align-items: baseline;
        justify-content: space-between;
        margin-bottom: 2rem;
      }

      .tile-header {
    margin-bottom: 0.75rem;
    text-align: center;
    font-family: Montserrat,sans-serif;
    font-size: 20px;
  }

      @media (min-width: 50em) {
        .content {
          margin-top: 4rem;
        }
      }
    </style>
  </head>

  <body>
    <Header />
    <div class="layout">
      <article class="content">
        <section class="tile">
          <Work />
        </section>
         <section class="tile">
          <div class="tile-header-wrapper">
           
             
          </div>
          {featuredProjects.map(p => <ProjectPreview projects={p} />)}
          <div class="tile-header-wrapper">
        
          
          </div>
        </section>
      </article>
    </div>
    
    <BlogFooter />
  </body>
</html>

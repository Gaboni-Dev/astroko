---
import Author from '../components/Author.astro'
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import BlogPostPreview from '../components/BlogPostPreview.astro';
import BlogFooter from '../components/BlogFooter.astro';

let title = 'ryanharris.dev';
let description = 'software engineer.';
let permalink = 'https://ryanharris.dev/';

let allPosts = Astro.fetchContent('./posts/*.md');
const featuredPosts = allPosts.filter(post => {
  return post.featured;
})

---
<html lang="en">
  <head>
    <BaseHead title={title} description={description} permalink={permalink} />
    <link rel="stylesheet" href="/blog.css" />

    <style>
      body {
        width: 100%;
        display: grid;
        grid-template-rows: 3.5rem 1fr;
        --gutter: 0.5rem;
        --doc-padding: 2rem;
      }

      header {
        width: 100%;
        height: 100%;
        background-color: var(--theme-bg-offset);
        display: flex;
        align-items: center;
        justify-content: center;
      }

      .content {
        margin-top: 4rem;
      }

      .content :global(main > * + *) {
        margin-top: 1rem;
      }

      .tile {
        margin-bottom: 3rem;
      }

      .tile-header {
        margin-bottom: 3rem;
      }
    </style>
  </head>

  <body>
    <Header />
    <div class="layout">
      <article class="content">
        <section class="tile">
          <Author />
        </section>
        <section class="tile">
          <h3 class="tile-header">featured posts</h3>
          {featuredPosts.map(p => <BlogPostPreview post={p} />)}
        </section>
      </article>
    </div>
    <BlogFooter />
  </body>
</html>
